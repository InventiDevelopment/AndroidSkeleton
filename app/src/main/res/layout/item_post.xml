<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/material_component_lists_right_padding"
    android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
    android:foreground="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user_avatar"
        style="@style/CircleImageView"
        android:layout_width="@dimen/material_layout_avatar"
        android:layout_height="@dimen/material_layout_avatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/material_component_lists_icon_left_padding"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/material_component_lists_two_line_height"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/material_component_lists_text_padding_bottom"
        android:layout_marginLeft="@dimen/material_component_lists_text_left_padding"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textSize="@dimen/material_component_lists_two_line_text_size"
        tools:text="Title title title"/>

</RelativeLayout>
